<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="8dp">
    <TextView
        android:id="@+id/tv_tab_item_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/selector_app_wall_yellow_theme"
        android:gravity="center"
        android:textColor="@color/color_tab_text_color_yellow_theme"
        android:textSize="16sp"
        android:text="@string/app_wall"/>
    <ImageView
        android:id="@+id/iv_tab_item_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"/>

</LinearLayout>